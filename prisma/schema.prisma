// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee {
  id             String  @id @default(cuid())
  name           String
  email          String  @unique
  phoneNumber    String
  salary         Float
  jobTitle       String
  profilePicture String?

  @@map("employees")
}
